# ==========================================
# OrizonLLM Environment Variables
# Enterprise LLM Gateway - All Features Unlocked
# ==========================================
# Copy this file to .env and fill in your values
# DO NOT commit .env to git (it's in .gitignore)

# ==========================================
# Database Configuration
# ==========================================
POSTGRES_PASSWORD=your_secure_postgres_password_here
DATABASE_URL=postgresql://postgres:${POSTGRES_PASSWORD}@postgres:5432/orizon

# ==========================================
# Redis Configuration
# ==========================================
REDIS_PASSWORD=your_secure_redis_password_here
REDIS_HOST=redis
REDIS_PORT=6379

# ==========================================
# OrizonLLM Core Configuration
# (Uses LITELLM_* names for compatibility with upstream)
# ==========================================
LITELLM_MASTER_KEY=sk-your-master-key-here
LITELLM_SALT_KEY=sk-your-salt-key-here
STORE_MODEL_IN_DB=True

# ==========================================
# Email Service (for magic link authentication)
# Required for external user signup and magic link login
# ==========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password

# ==========================================
# GitHub OAuth (for external portal login)
# Register app at: https://github.com/settings/developers
# Callback URL: http://localhost:4000/api/login/github/callback
# ==========================================
GITHUB_OAUTH_CLIENT_ID=your_github_client_id
GITHUB_OAUTH_CLIENT_SECRET=your_github_client_secret

# ==========================================
# Azure Key Vault (for production secrets management)
# Set USE_AZURE_KEY_VAULT=true to enable Azure Key Vault integration
# All secrets (API keys, passwords) will be loaded from Azure KV
# Secret names are converted: OPENAI_API_KEY -> openai-api-key
# ==========================================
USE_AZURE_KEY_VAULT=false
# AZURE_KEY_VAULT_URI=https://your-vault-name.vault.azure.net/

# ==========================================
# Optional: Azure Blob Storage (for production cold storage)
# Used in production for archiving logs older than 90 days
# During development, local filesystem is used (./archives/)
# ==========================================
# AZURE_STORAGE_CONNECTION_STRING=
# AZURE_STORAGE_CONTAINER_NAME=orizon-logs

# ==========================================
# Optional: LLM Provider API Keys
# Only needed if you want to test LLM calls through OrizonLLM
# ==========================================
# OPENAI_API_KEY=
# ANTHROPIC_API_KEY=
# AZURE_API_KEY=
# AZURE_API_BASE=
# AZURE_API_VERSION=
